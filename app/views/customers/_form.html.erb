<%= form_for @customer do |f| %>
	<% if @customer.errors.any? %>
		<div class="error-description">
			<h2><%= pluralize(@customer.errors.count, "error") %> prohibited this information from being saved:</h2>

			<ul>
				<% @customer.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :email %><br />
		<%= f.email_field :email %>
	</p>

	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>

<% end %>