<h2><%= link_to restaurant.name, restaurant %></h2>
<p>
  <ul>
    <% restaurant.food_types.each do |type| %>
      <li><%= type.name %><br></li>
    <% end %>
  </ul>
</p>
<p><%= restaurant.description %></p>

<div class="contact_info">
<p>
  <% if !restaurant.city.empty? %>
    <%= restaurant.full_street_address %>
  <% end %>
  
  <% if !restaurant.area_code.nil? %>
    <br><%= restaurant.phone_number %>
  <% end %>
</p>
</div>
